alias update='sudo xbps-install -Su'
alias install='sudo xbps-install -S'
alias remove='sudo xbps-remove'
alias query='sudo xbps-query'
alias reconf='sudo xbps-reconfigure'
alias pkgdb='sudo xbps-pkgdb'
alias update-grub='sudo grub-mkconfig -o /boot/grub/grub.cfg'
alias old-kernel='sudo vkpurge list'
alias purge-kernel='sudo vkpurge rm all'
alias cflat='flatpak uninstall --unused --delete-data'
alias rflat='flatpak repair'
alias c='clear'
alias ls='ls -a --color=auto'
alias grep='grep --colour=auto'
alias cp='cp -i'
alias df='df -h'
alias free='free -h'
alias fonts='kitty +list-fonts'
alias e='exit'
alias VIFM='sudo vifm'
