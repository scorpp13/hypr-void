{
//	Workspaces
"hyprland/workspaces" : {
	"on-scroll-up": "hyprctl dispatch workspace r-1",
	"on-scroll-down": "hyprctl dispatch workspace r+1",
	"on-click": "activate",
	"active-only": false,
	"all-outputs": true,
	"format": "{}",
	"format-icons": {
		"urgent": "",
		"active": "",
		"default": ""
	},
"persistent-workspaces": {"*": 4}
},
//	Taskbar
"wlr/taskbar": {
	"all-outputs": true,
	"icon-size": 18,
	"tooltip-format": "{name}",
	"on-click": "activate",
	"on-click-middle": "close"
},
//	Window
"hyprland/window": {
	"format": "{}",
	"rewrite": {
		"(.*) - Mousepad": "  $1",
		"(.*) - Thunar": "  $1",
		"(.*) - Vivaldi": "  $1"
	},
	"max-length": 200,
	"separate-outputs": true
},
//	Cliphist
"custom/cliphist": {
	"format": "",
	"on-click": "sleep 0.1 && cliphist.sh",
	"on-click-right": "sleep 0.1 && cliphist.sh d",
	"on-click-middle": "sleep 0.1 && cliphist.sh w",
	"tooltip-format": "Clipboard"
},
//	Updates
"custom/updates": {
	"format": "󰶡  {}",
	"tooltip-format": "{} updates available",
	"escape": true,
	"return-type": "json",
	"exec": "updates.sh",
	"restart-interval": 3600,
	"on-click": "kitty --class floating -e installupdates.sh",
	"on-click-middle": "kitty --class floating -e cleanup.sh",
	"on-click-right": "kitty --class floating -e mirrorlist.sh"
},
//	Wallpapers
"custom/wallpaper": {
	"format": "",
	"on-click": "waypaper",
	"tooltip-format": "Wallpapers"
},
//	Themes
"custom/waybarthemes": {
	"format": "",
	"on-click": "themeswitcher.sh",
	"tooltip-format": "Themes"
},
//	File Manager
"custom/filemanager": {
	"format": "",
	"on-click": "kitty -e vifm",
	"tooltip-format": "VIFM filemanager"
},
//	Web Browser
"custom/browser": {
	"format": "",
	//"on-click": "vivaldi-stable --proxy-server='http://127.0.0.1:8080'",
	"on-click": "vivaldi-stable",
	"tooltip-format": "Vivaldi browser"
},    
//	Media Player
"custom/player": {
	"format": "󱜅",
	"on-click": "mpv.sh",
	"tooltip-format": "MPV Player"
},
//	Scripts
"custom/script": {
	"format": "",
	"on-click": "script.sh",
	"tooltip-format": "Custom scripts"
},
//	App Menu
"custom/appmenu": {
	"format": "",
	"on-click": "fuzzel",
	"on-click-right": "keybindings.sh",
	"tooltip-format": "Right click for keybinds"
},
//	Power Menu
"custom/exit": {
	"format": "",
	"on-click": "wlogout",
	"tooltip-format": "Power Menu"
},
//	System tray
"tray": {
	"icon-size": 16,
	"spacing": 10
},
//	Clock
"clock": {
	"tooltip-format": "<big>{:%a %d %B}</big>\n\n<tt><small>{calendar}</small></tt>",
	//"format-alt": "{:%d-%m-%Y}",
	"calendar": {
		"mode"          : "year",
		"mode-mon-col"  : 3,
		//"weeks-pos"		: "right",
		"on-scroll"     : 1,
			"format": {
				"months"	: "<span color='#ffead3'><b>{}</b></span>",
				"days"		: "<span color='#ecc6d9'><b>{}</b></span>",
				//"weeks"		: "<span color='#99ffdd'><b>W{}</b></span>",
				"weekdays"	: "<span color='#ffcc66'><b>{}</b></span>",
				"today"		: "<span color='#ff6699'><b><u>{}</u></b></span>"
			}
		},
	"actions": {
		"on-click"			: "mode",
		"on-scroll-up"		: "shift_up",
		"on-scroll-down"	: "shift_down"
	}
},
//	Weather	
"custom/weather": {
	"format": "{}",
	"return-type": "json",
	"exec": "weather.sh 'Калининград' 2> /dev/null",
	"interval": 3600,
	"tooltip": true,
	"on-click": "kitty --class floating -e wttr.sh"
},	
//	CPU_temp
"temperature": {
	"critical-threshold": 80,
	"format-critical": "{temperatureC}°C",
	"format": "",
	"on-click": "kitty --class floating -e btop",
	"tooltip": false
},
//	Language
"hyprland/language": {
	//"on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next",
	"on-click": "hyprctl switchxkblayout lenovo-lenovo-calliope-usb-keyboard next",
	"format": "{}",
	"format-en": "EN",
	"format-ru": "RU",
	//"keyboard-name": "at-translated-set-2-keyboard",
	"keyboard-name": "lenovo-lenovo-calliope-usb-keyboard"
},
//	Pulseaudio
"pulseaudio": {
	"format": "{icon} {volume}%",
	"format-muted": "",
	"format-source": " {volume}%",
	"format-source-muted": "",
	"tooltip-format": "middle-click to (un)mute",
	"tooltip": true,
	"format-icons": {
		"default": [" ", " ", "󰕾 ", " "]
	},
	"on-click": "pavucontrol",
	"on-click-middle": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
},
//	Other
"user": {
	"format": "{user}",
	"interval": 60,
	"icon": false
}
}
